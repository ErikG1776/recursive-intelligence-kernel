# Development Environment Configuration
RIK_ENV=development
RIK_DEBUG=true

# API
RIK_API_HOST=0.0.0.0
RIK_API_PORT=8000
RIK_API_RELOAD=true

# Database - SQLite for dev
RIK_DATABASE_URL=sqlite:///data/memory.db

# Security - Disabled for easier dev testing
RIK_API_KEY_ENABLED=false
RIK_API_KEYS=

# Rate limiting - Generous for dev
RIK_RATE_LIMIT_REQUESTS=1000
RIK_RATE_LIMIT_PERIOD=60

# CORS - Allow all for dev
RIK_CORS_ORIGINS=*

# Logging - Console only
RIK_LOG_LEVEL=DEBUG
RIK_LOG_FORMAT=text
RIK_LOG_FILE_ENABLED=false

# Business rules - Lower thresholds for testing
RIK_AUTO_APPROVE_THRESHOLD=5000.0
RIK_REQUIRE_PO_OVER=10000.0
RIK_TRUSTED_VENDORS=Acme Corporation,Microsoft Corporation,Amazon Web Services,Google LLC,Salesforce Inc

# Features - All enabled
RIK_FEATURE_INVOICE_PROCESSING=true
RIK_FEATURE_SELECTOR_RECOVERY=true
RIK_FEATURE_MEMORY_LEARNING=true
