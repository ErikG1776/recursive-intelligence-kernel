# Staging Environment Configuration
RIK_ENV=staging
RIK_DEBUG=false

# API
RIK_API_HOST=0.0.0.0
RIK_API_PORT=8000
RIK_API_WORKERS=2
RIK_API_RELOAD=false

# Database - PostgreSQL recommended for staging
# Update with your actual staging database credentials
RIK_DATABASE_URL=postgresql://rik_user:CHANGEME@localhost:5432/rik_staging
RIK_DATABASE_POOL_SIZE=10
RIK_DATABASE_MAX_OVERFLOW=20

# Security - ENABLED with staging keys
RIK_API_KEY_ENABLED=true
# Generate keys: openssl rand -hex 32
RIK_API_KEYS=rik_staging_key_CHANGEME

# Rate limiting - Production-like
RIK_RATE_LIMIT_REQUESTS=100
RIK_RATE_LIMIT_PERIOD=60

# CORS - Restrict to staging domains
RIK_CORS_ORIGINS=https://staging.yourcompany.com,https://staging-app.yourcompany.com

# Logging - JSON format, file enabled
RIK_LOG_LEVEL=INFO
RIK_LOG_FORMAT=json
RIK_LOG_FILE_ENABLED=true
RIK_LOG_FILE=logs/rik_staging.log

# Business rules - Production values
RIK_AUTO_APPROVE_THRESHOLD=5000.0
RIK_REQUIRE_PO_OVER=10000.0
RIK_VENDOR_SIMILARITY_THRESHOLD=0.85

# Memory
RIK_MEMORY_CONSOLIDATION_ENABLED=true
RIK_MEMORY_CONSOLIDATION_INTERVAL_HOURS=24

# Features - All enabled
RIK_FEATURE_INVOICE_PROCESSING=true
RIK_FEATURE_SELECTOR_RECOVERY=true
RIK_FEATURE_MEMORY_LEARNING=true

# Monitoring
RIK_METRICS_ENABLED=true
RIK_HEALTH_CHECK_ENABLED=true
